<h2>Lista de Posts</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Novo Post</button></a>

{{#each postagens}}
    <div class="card">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <small>{{data}}</small>
            <small>{{categoria}}</small>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}